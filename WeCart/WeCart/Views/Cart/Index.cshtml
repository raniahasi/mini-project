@model IEnumerable<WeCart.Models.CartItem>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<style>
    .col-xl-8 {
        margin-top: 50px;
    }

    .btn-success {
        margin-bottom: 38%;
        color: #fff;
        background-color: #d10024;
        border-color: #8d99ae;
        margin-left: 78%;
    }

    .avatar-lg {
        height: 5rem;
        width: 5rem;
    }

    .card-body {
        padding-left: 60px;
        padding-right: 60px;
    }

    .font-size-18 {
        font-size: 18px !important;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    a {
        text-decoration: none !important;
    }

    .w-xl {
        min-width: 160px;
    }

    .card {
        margin-bottom: 24px;
        -webkit-box-shadow: 0 2px 3px #e4e8f0;
        box-shadow: 0 2px 3px #e4e8f0;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid #eff0f2;
        border-radius: 1rem;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-xl-8">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="card border shadow-none">
                        <div class="card-body">
                            <div class="d-flex align-items-start border-bottom pb-3">
                                <div class="me-4">
                                    <img src="@item.Product.ImageUrl" alt="" class="avatar-lg rounded">
                                </div>
                                <div class="flex-grow-1 align-self-center overflow-hidden">
                                    <div>
                                        <h5 class="text-truncate font-size-18"><a href="#" class="text-dark">@item.Product.Name</a></h5>
                                        <p class="text-muted mb-0">
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                if (i < item.Product.Rating)
                                                {
                                                    <i class="bx bxs-star text-warning"></i>
                                                }
                                                else if (i == item.Product.Rating && item.Product.Rating % 1 != 0)
                                                {
                                                    <i class="bx bxs-star-half text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bx bxs-star text-muted"></i>
                                                }
                                            }
                                        </p>
                                        <p class="mb-0 mt-1">Color : <span class="fw-medium"></span></p>
                                    </div>
                                </div>
                                <div class="flex-shrink-0 ms-2">
                                    <ul class="list-inline mb-0 font-size-16">
                                        <li class="list-inline-item">
                                            <!-- Add this line for the trash icon -->
                                            <a href="javascript:void(0);" onclick="removeFromCart(@item.ProductId)" class="text-muted px-1">
                                                <i class="mdi mdi-trash-can-outline"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="javascript:void(0);" onclick="updateQuantity(@item.ProductId, 1)" class="text-muted px-1">
                                                <i class="mdi mdi-plus"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="javascript:void(0);" onclick="updateQuantity(@item.ProductId, -1)" class="text-muted px-1">
                                                <i class="mdi mdi-minus"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mt-3">
                                            <p class="text-muted mb-2">Price</p>
                                            <h5 class="mb-0 mt-2">
                                                <span class="text-muted me-2">
                                                    <del class="font-size-16 fw-normal">$@item.Product.OldPrice</del>
                                                </span>
                                                $@item.Product.Price
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="mt-3">
                                            <p class="text-muted mb-2">Quantity</p>
                                            <div>
                                                <span>@item.Quantity</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mt-3">
                                            <p class="text-muted mb-2">Total</p>
                                            <h5>$@(item.Quantity * item.Product.Price)</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    Your cart is empty.
                </div>
            }
        </div>

        <div class="col-xl-4" id="cart-summary">
            @if (Model.Any())
            {
                <div class="mt-5 mt-lg-0">
                    <div class="card border shadow-none">
                        <div class="card-header bg-transparent border-bottom py-3 px-4"></div>
                        <div class="card-body p-4 pt-2">
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <tbody>
                                        <tr>
                                            <td>Sub Total :</td>
                                            <td class="text-end">$@Model.Sum(item => item.Quantity * item.Product.Price)</td>
                                        </tr>
                                        <tr>
                                            <td>Discount : </td>
                                            <td class="text-end">- $@ViewBag.Discount</td>
                                        </tr>
                                        <tr>
                                            <td>Shipping Charge :</td>
                                            <td class="text-end">$@ViewBag.ShippingCharge</td>
                                        </tr>
                                        <tr>
                                            <td>Estimated Tax : </td>
                                            <td class="text-end">$@ViewBag.EstimatedTax</td>
                                        </tr>
                                        <tr class="bg-light">
                                            <th>Total :</th>
                                            <td class="text-end">
                                                <span class="fw-bold">
                                                    $@Model.Sum(item => (decimal)item.Quantity * item.Product.Price
                                                 - (decimal)(@ViewBag.Discount ?? 0)
                                                 + (decimal)(@ViewBag.ShippingCharge ?? 0)
                                                 + (decimal)(@ViewBag.EstimatedTax ?? 0))
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row my-4">
                        <div class="col-sm-6">
                            <a href="@Url.Action("Index", "Products")" class="btn btn-link text-muted">
                                <i class="mdi mdi-arrow-left me-1"></i> Continue Shopping
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end mt-2 mt-sm-0">
                                <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">
                                    <i class="mdi mdi-cart-outline me-1"></i> Checkout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

