@model WeCart.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>
    <div class="login-form">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="form-group">
                <input type="email" name="email" class="form-style" placeholder="Your Email" autocomplete="off">
                <i class="input-icon uil uil-at"></i>
            </div>
            <div class="form-group mt-2">
                <input type="password" name="password" class="form-style" placeholder="Your Password" autocomplete="off">
                <i class="input-icon uil uil-lock-alt"></i>
            </div>
            <input type="submit" value="Log In" class="btn mt-4" />
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    @if (ViewBag.LoginFailed != null && ViewBag.LoginFailed)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Wrong Password',
                text: '@ViewBag.LoginFailedMessage'
            });
        </script>
    }
</body>
</html>
