@model WeCart.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Profile</title>
    
    <style>
        .profile-container {
            background-color: #f8f9fa;
            max-width: 900px;
            margin-top: 100px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-left: 3%;
            margin-bottom:100px;
        }

            .profile-container .text-center img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: cover;
            }

            .profile-container .btn-primary {
                background-color: #D10024;
                border-color: #D10024;
                font-weight: bold;
            }

                .profile-container .btn-primary:hover {
                    background-color: #A7001A;
                    border-color: #A7001A;
                }

            .profile-container .card-header {
                background-color: transparent;
                font-size: 1.5rem;
                font-weight: bold;
                color: #333;
                padding-bottom: 0;
            }

            .profile-container .form-control {
                border-radius: 5px;
                border: 1px solid #ced4da;
            }

            .profile-container .form-group label {
                font-weight: bold;
                color: #333;
            }

            .profile-container .upload-btn-wrapper {
                position: relative;
                overflow: hidden;
                display: inline-block;
            }

                .profile-container .upload-btn-wrapper .btn {
                    border: 2px solid #D10024;
                    color: #D10024;
                    background-color: white;
                    padding: 8px 20px;
                    border-radius: 8px;
                    font-size: 16px;
                    font-weight: bold;
                    cursor: pointer;
                }

                .profile-container .upload-btn-wrapper input[type=file] {
                    font-size: 100px;
                    position: absolute;
                    left: 0;
                    top: 0;
                    opacity: 0;
                    cursor: pointer;
                }

                .profile-container .upload-btn-wrapper .btn:hover {
                    background-color: #f0f0f0;
                }
        button.btn {
            margin-top: 19%;
        }
            button.btn.btn-primary.mt-3 {
                margin-left: 12%;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile-container">
            <h2 class="card-header">Account Details</h2>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="text-center">
                        <img id="profile-picture" src="@Model.PhotoUrl" alt="Profile Picture">
                        <div class="upload-btn-wrapper mt-3">
                            <button class="btn">Upload new image</button>
                            <input type="file" name="Photo" id="Photo">
                        </div>
                       

                    </div>
                </div>
                <div class="col-md-8">
                    <form action="@Url.Action("UpdateProfile", "Account")" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="FirstName">First name</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" readonly>
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last name</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" readonly>
                        </div>
                        <div class="form-group">
                            <label for="Email">Email address</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" readonly>
                        </div>
                        <div class="form-group">
                            <label for="Password">New Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter new password">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Photo').change(function () {
                var formData = new FormData();
                formData.append("Photo", $(this)[0].files[0]);

                $.ajax({
                    url: '@Url.Action("UploadProfilePicture", "Account")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            $('#profile-picture').attr('src', response.photoUrl);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("An error occurred while uploading the photo.");
                    }
                });
            });
        });
    </script>
</body>
</html>
