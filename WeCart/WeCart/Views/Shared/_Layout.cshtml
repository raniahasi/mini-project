    <!-- Custom JavaScript for Cart Operations -->
    <script>
        $(document).ready(function () {
            updateCartSummary();

            // Add to Cart function
            window.addToCart = function (productId) {
                $.ajax({
                    url: '/Cart/AddToCart',
                    method: 'POST',
                    data: { productId: productId },
                    success: function () {
                        updateCartSummary();
                        Swal.fire({
                            icon: 'success',
                            title: 'Product Added To Cart',
                            showConfirmButton: false,
                            timer: 1500
                        });
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'There was an error adding the item to the cart.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            };

            // Remove from Cart function
            window.removeFromCart = function (productId) {
                $.ajax({
                    url: '/Cart/RemoveFromCart',
                    method: 'POST',
                    data: { productId: productId },
                    success: function () {
                        updateCartSummary();
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'There was an error removing the item from the cart.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            };

            // Update Cart Summary
            function updateCartSummary() {
                $.ajax({
                    url: '/Cart/CartSummary',
                    method: 'GET',
                    success: function (data) {
                        $('.header-ctn .qty').text(data.Count);
                        $('.cart-summary .item-count').text(data.Count);

                        var cartList = $('.cart-list');
                        cartList.empty();

                        data.Items.forEach(function (item) {
                            var cartItemHtml = `
                                        <div class="product-widget">
                                            <div class="product-img">
                                                <img src="${item.ImageUrl}" alt="">
                                            </div>
                                            <div class="product-body">
                                                <h3 class="product-name"><a href="#">${item.Name}</a></h3>
                                                <h4 class="product-price"><span class="qty">${item.Quantity}x</span>$${item.Price}</h4>
                                            </div>
                                            <button class="delete" onclick="removeFromCart(${item.ProductId})"><i class="fa fa-close"></i></button>
                                        </div>`;
                            cartList.append(cartItemHtml);
                        });

                        var subtotal = data.Items.reduce(function (total, item) {
                            return total + (item.Quantity * item.Price);
                        }, 0);

                        $('.cart-summary .subtotal').text(subtotal.toFixed(2));
                    }
                });
            }

            // Update Quantity in Cart
            window.updateQuantity = function (productId, change) {
                $.ajax({
                    url: '/Cart/UpdateQuantity',
                    method: 'POST',
                    data: { productId: productId, quantity: change },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message,
                                confirmButtonText: 'OK'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'There was an error updating the cart.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            };

            // Clear Cart function
            window.clearCart = function () {
                $.ajax({
                    url: '/Cart/ClearCart',
                    method: 'POST',
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'There was an error clearing the cart.',
                                confirmButtonText: 'OK'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'There was an error clearing the cart.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            };
        });


         function uploadImage() {
     var formData = new FormData();
     var fileInput = document.getElementById('Photo');
     var file = fileInput.files[0];
     formData.append('Photo', file);

     var xhr = new XMLHttpRequest();
     xhr.open('POST', '@Url.Action("UploadProfilePicture", "Account")', true);

     xhr.onload = function () {
         if (xhr.status === 200) {
             // Update the profile picture on success
             var imageUrl = JSON.parse(xhr.responseText).photoUrl;
             document.getElementById('profilePic').src = imageUrl;
         } else {
             alert('An error occurred while uploading the image.');
         }
     };

     xhr.send(formData);
 }
    </script>

    @RenderSection("scripts", required: false)
